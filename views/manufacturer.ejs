<%- include("./partials/header") %>

<%- include("./partials/navbar") %>

<h3 class="text-center">제조업체 등록</h3>

<div class="container py-3">
  <form method="POST">
    <div class="form-horizontal">
      <div class="form-group row mb-3">
        <label for="name" class="col-form-label col-sm-2">제조사명</label>
        <div class="col-sm-8">
          <input
            class="form-control"
            type="text"
            name="name"
            id="name"
            placeholder="제조사명"
            required
          />
        </div>
      </div>
      <div class="form-group row mb-3">
        <label for="postcode" class="col-form-label col-sm-2">우편번호</label>
        <div class="col-sm-5">
          <input
            type="text"
            class="form-control"
            name="postcode"
            id="postcode"
            placeholder="우편번호"
            required
          />
        </div>
        <!-- button -->
        <div class="col-sm-3">
          <input
            type="button"
            class="btn btn-md btn-outline-success"
            onclick="execDaumPostcode()"
            value="우편번호 찾기"
          />
        </div>
      </div>
      <div class="form-group row mb-3">
        <label class="col-form-label col-sm-2" for="address">주소</label>
        <div class="col-sm-8">
          <input
            type="text"
            class="form-control"
            name="address"
            id="address"
            placeholder="주소"
          />
        </div>
      </div>
      <div class="form-group row mb-3">
        <label for="detailAddress" class="col-form-label col-sm-2"
          >상세주소</label
        >
        <div class="col-sm-8">
          <input
            type="text"
            class="form-control"
            name="detailAddress"
            id="detailAddress"
            placeholder="상세주소"
          />
        </div>
      </div>

      <span id="guide" style="color: #999; display: none"></span>

      <div class="form-group row mb-3">
        <!-- <label for="extraAddress" class="col-form-label col-sm-2">참고항목</label> -->
        <div class="col-sm-8">
          <input
            type="text"
            class="form-control"
            name="extraAddress"
            id="extraAddress"
            placeholder="참고항목"
            hidden
          />
        </div>
      </div>
      <div class="form-group row mb-3">
        <label for="production" class="col-form-label col-sm-2">평균생산량</label>
        <div class="col-sm-8">
          <input type="number" step="any" class="form-control" id="production" name="production" placeholder="kg/월">
        </div>
      </div>
      <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input" id="check">
        <label for="check" class="form-check-label">
          <a href="">약관</a>에 동의합니다.</label>
      </div>  

      <button type="submit" class="btn btn-primary">등록</button>
    </div>
  </form>
</div>

<script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
<script src="/js/scripts.js"></script>

<%- include("./partials/footer") -%>

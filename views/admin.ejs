<%- include('./partials/header') %> <%- include("./partials/navbar") %>

<!-- restaurants -->
<div class="container py-3">
  <h3 class="text-center">음식점</h3>
  <div class="table-responsive-sm">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>식당</th>
          <th>우편번호</th>
          <th>주소</th>
          <th>상세주소</th>
          <th>종류</th>
          <th>브랜드</th>
          <th>면적</th>
          <th>소비량</th>
          <th>승인</th>
          <th class="d-print-none"></th>
        </tr>
      </thead>
      <tbody>
        <% for (const restaurant of model.restaurants) { %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.postcode %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.detail_address %></td>
          <td><%= restaurant.cuisine %></td>
          <td><%= restaurant.brand %></td>
          <td><%= restaurant.area %></td>
          <td><%= restaurant.consumption %></td>
          <td><%= restaurant.approved %></td>
          <td class="d-print-none">
            <a
              class="btn btn-sm btn-warning"
              href="restaurant/<%= restaurant._id %>/update"
            >
              <i class="bi bi-pencil-square"></i>
              수정
            </a>
            <a
              class="btn btn-sm btn-danger"
              href="/restaurant/<%= restaurant._id %>/delete"
            >
              <i class="bi bi-trash"></i>
              삭제
            </a>
            <a
              class="btn btn-sm btn-primary"
              href="/restaurant/<%= restaurant._id %>/approve"
            >
              <i class="bi bi-check-lg"></i>
              승인
            </a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- manufacturers -->
